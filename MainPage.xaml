<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Avance2Progreso.MainPage"
             Title="Administrar Usuarios">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Title -->
            <Label Text="User Management" 
                   FontSize="24" 
                   HorizontalOptions="Center" />

            <!-- Add User Section -->
            <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Add User" FontSize="18" FontAttributes="Bold" />

                    <Entry x:Name="UsernameEntry" Placeholder="Enter Username" />
                    <Entry x:Name="PasswordEntry" Placeholder="Enter Password" IsPassword="True" />

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Is Admin:" VerticalOptions="Center" />
                        <Switch x:Name="IsAdminSwitch" />
                    </HorizontalStackLayout>

                    <Button Text="Add User"
                            BackgroundColor="Green"
                            TextColor="White"
                            Clicked="OnCreateUserClicked" />
                </VerticalStackLayout>
            </Frame>

            <!-- Delete User Section -->
            <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Delete User" FontSize="18" FontAttributes="Bold" />

                    <Entry x:Name="UserIdEntry" Placeholder="Enter User ID to Delete" Keyboard="Numeric" />

                    <Button Text="Delete User"
                            BackgroundColor="Red"
                            TextColor="White"
                            Clicked="OnDeleteUserClicked" />
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Get All Users" FontSize="18" FontAttributes="Bold" />

                    <Button Text="Fetch Users"
                BackgroundColor="Blue"
                TextColor="White"
                Clicked="OnFetchUsersClicked" />

                    <!-- Lista de usuarios -->
                    <CollectionView x:Name="UsersCollection" ItemsSource="{Binding Users}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal" Padding="5">
                                    <Label Text="{Binding Id}" WidthRequest="50" />
                                    <Label Text="{Binding Username}" />
                                    <Label Text="{Binding IsAdmin}" HorizontalOptions="EndAndExpand" />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Get User by ID" FontSize="18" FontAttributes="Bold" />

                    <Entry x:Name="FetchUserIdEntry" Placeholder="Enter User ID" Keyboard="Numeric" />

                    <Button Text="Fetch User"
                BackgroundColor="Blue"
                TextColor="White"
                Clicked="OnFetchUserByIdClicked" />

                    <Label x:Name="FetchedUserLabel" Text="" FontSize="14" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Update User" FontSize="18" FontAttributes="Bold" />

                    <Entry x:Name="UpdateUserIdEntry" Placeholder="Enter User ID" Keyboard="Numeric" />
                    <Entry x:Name="UpdateUsernameEntry" Placeholder="Enter New Username" />
                    <Entry x:Name="UpdatePasswordEntry" Placeholder="Enter New Password" IsPassword="True" />

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Is Admin:" VerticalOptions="Center" />
                        <Switch x:Name="UpdateIsAdminSwitch" />
                    </HorizontalStackLayout>

                    <Button Text="Update User"
                BackgroundColor="Orange"
                TextColor="White"
                Clicked="OnUpdateUserClicked" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
