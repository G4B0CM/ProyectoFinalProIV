<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Avance2Progreso.ViewModels"
             x:Class="Avance2Progreso.Views.Registro"
             Title="Registrar Usuario">
    <ContentPage.BindingContext>
        <vm:UserViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout>
            <StackLayout Background="#142e4e" Padding="15">
                <Label Text="Registrar Usuario"
                       FontSize="24"
                       HorizontalOptions="Center"
                       TextColor="White"/>
            </StackLayout>
            <StackLayout>
                <Image Source="https://cdn.freebiesupply.com/logos/large/2x/diners-club-international-2-logo-png-transparent.png"
                       HeightRequest="250"/>
            </StackLayout>


                <!-- Campo para Nombre de Usuario -->
            <StackLayout Padding="20">
                <Entry Placeholder="Nombre de Usuario"
                       Text="{Binding Username}"
                       Keyboard="Default"
                       MaxLength="50"/>
            </StackLayout>
            

            <!-- Campo para Contraseña -->
            <StackLayout Padding="20">
                <Entry Placeholder="Contraseña"
                       Text="{Binding Password}"
                       IsPassword="True"
                       Keyboard="Default"
                       MaxLength="50" />    
            </StackLayout>
            

            <!-- Interruptor para definir si es administrador -->
            <Frame BorderColor="Transparent">
                <Grid ColumnDefinitions="Auto, *" WidthRequest="300">

                    <Label Grid.Column="0" 
                           Text="¿Es administrador?" 
                           VerticalOptions="Center" />
                    
                    <Switch Grid.Column="1" 
                            IsToggled="{Binding IsAdmin}" 
                            HorizontalOptions="End" />
                </Grid>
            </Frame>
            <HorizontalStackLayout>

                
                
            </HorizontalStackLayout>

            <!-- Botón para Guardar -->
            <Button Text="Guardar Usuario"
                    Command="{Binding SaveCommand}" 
                    BackgroundColor="#142e4e"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="200" HeightRequest="50"/>

            <!-- Botón para Listar Usuarios -->
            <Button Text="Listar Usuarios"
                    Command="{Binding GetAllPeopleCommand   }"
                    BackgroundColor="LightGreen"
                    TextColor="Black"
                    CornerRadius="10" />

            <!-- Lista de usuarios -->
            <CollectionView ItemsSource="{Binding UsersList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Username}" FontSize="18" />
                            <Label Text="{Binding IsAdmin}" FontSize="14" TextColor="Gray" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Mensaje de estado -->
            <Label Text="{Binding StatusMessage}" 
                   FontAttributes="Italic" 
                   TextColor="Gray"
                   HorizontalTextAlignment="Center" />
        </StackLayout>
    </ScrollView>
</ContentPage>
